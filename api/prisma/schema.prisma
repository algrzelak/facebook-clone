generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model FriendStatus {
  fromUserId                         Int
  id                                 Int       @default(autoincrement()) @id
  responseTime                       DateTime?
  sentTime                           DateTime  @default(now())
  statusId                           Int       @default(2)
  toUserId                           Int
  sender                             User      @relation("FriendStatus_fromUserIdToUser", fields: [fromUserId], references: [id])
  receiver                           User      @relation("FriendStatus_toUserIdToUser", fields: [toUserId], references: [id])
}

model Post {
  authorId  Int
  content   String?
  createdAt DateTime @default(now())
  id        Int      @default(autoincrement()) @id
  author      User     @relation(fields: [authorId], references: [id])
}

model Profile {
  bio    String?
  id     Int     @default(autoincrement()) @id
  userId Int     @unique
  user   User    @relation(fields: [userId], references: [id])
}

model User {
  birthday                                   DateTime
  email                                      String         @unique
  firstName                                  String
  gender                                     Gender
  id                                         Int            @default(autoincrement()) @id
  lastName                                   String
  passwordHash                               String
  sentFriendInvitations                      FriendStatus[] @relation("FriendStatus_fromUserIdToUser")
  receivedFriendInvitations                  FriendStatus[] @relation("FriendStatus_toUserIdToUser")
  posts                                      Post[]
  profile                                    Profile?
}

enum Gender {
  FEMALE
  MALE
  OTHER
}
